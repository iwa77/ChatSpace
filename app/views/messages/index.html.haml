= render 'layouts/flash'
.chat-content
  .chat-content__user
    %h1 
      = current_user.name
    = link_to new_group_path do
      %i.fa.fa-pencil-square-o
    = link_to edit_user_registration_path do
      %i.fa.fa-cog

  .chat-content__group
    %ul
    - @groups.each do |group|
      = link_to group_path(group) do
        %li
        
          .group-name
            = group.name

          .group-message
            発言1
              